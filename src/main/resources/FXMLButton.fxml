<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.srdaniel.taskmanager.ControllerSignButtons">
   <children>
      <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome to Task Manager" />
         <Label text="Please log in or register." />
         <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="logInButton" mnemonicParsing="false" text="Log In" onAction="#logInAction" />
            <Button fx:id="registerButton" mnemonicParsing="false" text="Register" onAction="#registerAction" />
            <Button fx:id="logOutButton" mnemonicParsing="false" text="Log Out" onAction="#logOutAction" />
            <Button fx:id="exitButton" mnemonicParsing="false" text="Exit" onAction="#exitAction" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
